@model SocialMedia.UI.Models.UserVM

@{
    ViewData["Title"] = "Update my information";
}

<h1>Update my information</h1>


<hr />
@{
    var css_class = TempData["Message"] != null ? "d-block" : "d-none";

}
<div class="row mb-3">
    <div class="col-5 alert alert-danger @css_class">
        @Html.Raw(TempData["Message"])
    </div>

</div>
<div class="row">
    <div class="col-md-5">
        <form asp-action="UpdateUser" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.SMUser.Id" />
            <input type="hidden" asp-for="@Model.SMUser.UserName" />
            <div class="form-group">
                <label asp-for="@Model.SMUser.Name" class="control-label"></label>
                <input asp-for="@Model.SMUser.Name" class="form-control" />
                <span asp-validation-for="@Model.SMUser.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Last Name</label>
                <input asp-for="@Model.SMUser.Lastname" class="form-control" />
                <span asp-validation-for="@Model.SMUser.Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.SMUser.Email" class="control-label"></label>
                <input asp-for="@Model.SMUser.Email" class="form-control" />
                <span asp-validation-for="@Model.SMUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Birth Date</label>
                <input id="datepicker" type="date" asp-for="@Model.SMUser.BirthDate" class="form-control" />
                <span asp-validation-for="@Model.SMUser.BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.SMUser.Phone" class="control-label"></label>
                <input asp-for="@Model.SMUser.Phone" class="form-control" />
                <span asp-validation-for="@Model.SMUser.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Profile Picture</label>
                <input asp-for="@Model.Image" type="file" class="form-control" />
                <span asp-validation-for="@Model.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@Model.SMUser.PhotoRoute" alt="ProfilePhoto" width="200px" height="200px" />
            </div>

            <div class="form-group">
                <label class="control-label">Country</label>
                <select asp-for="@Model.SMUser.CountryId" asp-items='@Model.Countries.data.Select(a=> new SelectListItem { Text=a.Name, Value=a.Id.ToString() })'
                        class="form-select form-control">
                    <option value="" selected>Your country</option>
                </select>
                <span asp-validation-for="@Model.SMUser.CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
