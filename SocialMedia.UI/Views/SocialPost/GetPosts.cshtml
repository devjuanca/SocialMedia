@{ ViewData["Title"] = "User List"; }

<h1>Posts List</h1>



<p>
    <a class="btn btn-primary" data-toggle="collapse" href="#collapse" role="button" aria-expanded="false" aria-controls="collapseExample">
        Apply filters to search
    </a>
</p>

<div class="collapse" id="collapse">
    <div class="card card-body mb-3">
        <div class="col-4 mb-2">
            <input class="form-control" id="name_input" placeholder="Name">
        </div>
        <div class="col-4 mb-2">
            <input class="form-control" id="last_name_input" placeholder="Lastname">
        </div>
        <div class="col-4 mb-2">
            <input type="email" class="form-control" id="email_input" placeholder="Email">
        </div>
        <div class="col-4 mb-2">
            <input class="form-control" id="phone_input" placeholder="Phone">
        </div>

        <div class="col-4 mb-2">
            <button id="search_button" type="button" class="btn btn-info">Search</button>
        </div>

    </div>
</div>

<div class="row">
    <div id="paging_data" class="col-12">

    </div>
</div>

<div class="row">
    <div id="load_data" class="col-12">

    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" data-backdrop="static" data-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Write a comment</h5>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <textarea id="comment_Text" class="form-control" cols="40" rows="5"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="comment_Button" type="button" class="btn btn-primary">Send</button>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
<script src="~/js/GetPosts.js"></script>
}